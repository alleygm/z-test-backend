{% extends 'base.html.twig' %}
{% block body %}
        <div class="w-full h-full flex justify-center items-center">
                <div class=" size-auto p-5 bg-black/50 flex flex-col justify-center items-center">
                        <div>Аутентификация</div>
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}
                        {{ form_row(form.submit) }}
                        <a href="{{path('register')}}" class="default-btn" data-turbo-action="replace">зарегистрироваться</a>
                        {{ form_end(form) }}
                </div>
        </div>
        
	
{% endblock %}
